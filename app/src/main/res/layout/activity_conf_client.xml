<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secundarybackground"
    tools:context=".Activity.ConfClient">

    <View
        android:id="@+id/view18"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:background="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view19"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:background="@drawable/wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view18" />

    <View
        android:id="@+id/view20"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view21"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:background="@drawable/wavefoot"
        app:layout_constraintBottom_toTopOf="@+id/view20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/inputtext"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="13dp"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Nome:"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:shadowColor="@color/white"
        android:textColor="@color/background"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/background"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:id="@+id/editTextTelefone"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/inputtext"
        android:drawableStart="@drawable/ic_baseline_phone_in_talk_24"
        android:drawablePadding="13dp"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Telefone:"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/background"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/background"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNome" />

    <EditText
        android:id="@+id/editTextEndereco"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/inputtext"
        android:drawableStart="@drawable/ic_baseline_place_24"
        android:drawablePadding="13dp"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Endereço: Ex: Rua: 7, N 33ª, Bairro: Brasil"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/background"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/background"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTelefone" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="104dp"
        android:layout_height="95dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view18"
        app:srcCompat="@drawable/ic_baseline_supervised_user_circle_24" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background"
        android:onClick="salvaInfo"
        android:text="Salvar"
        app:layout_constraintBottom_toTopOf="@+id/view20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEndereco" />
</androidx.constraintlayout.widget.ConstraintLayout>